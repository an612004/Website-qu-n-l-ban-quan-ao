<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - ANBISHOP</title>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Areas/Assets/dist/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>

    <style type="text/css">
        /* Tổng quan về màu sắc và bố cục */
        body {
            font-family: Arial, sans-serif;
            background-color: #e9f7fd; /* Nền sáng hơn */
        }

        .menu1 {
            color: white;
            font-size: 24px; /* Tăng kích thước tiêu đề */
            padding-left: 15px;
            font-weight: 600; /* Tăng độ đậm chữ */
            text-transform: uppercase;
        }

        .sb-topnav {
            background: linear-gradient(to right, #6bc6e0, #6dcb6d); /* Gradient sáng và ít chói hơn */
        }

        .sb-sidenav {
            background-color: #ffffff; /* Sidebar màu trắng */
        }

            .sb-sidenav .nav {
                padding-top: 15px;
            }

                .sb-sidenav .nav .nav-link {
                    color: #4a4a4a; /* Màu chữ đậm hơn */
                    font-size: 17px; /* Tăng nhẹ kích thước */
                    font-weight: 500;
                    padding: 10px 18px; /* Điều chỉnh padding */
                    margin-bottom: 5px;
                }

                    .sb-sidenav .nav .nav-link:hover {
                        background-color: #e0f4f8; /* Màu nền nhẹ khi hover */
                        color: #0062cc;
                        transition: background-color 0.3s ease;
                    }

            .sb-sidenav .sb-sidenav-footer {
                background-color: #f8f9fa; /* Footer sidebar với màu trung tính */
                padding: 15px;
            }

        footer {
            background-color: #f8f9fa; /* Nền sáng cho footer */
            padding: 15px; /* Điều chỉnh padding cho cân đối */
        }

        .container-fluid {
            padding-top: 25px; /* Tăng khoảng cách trên */
        }

        footer a {
            color: #007bff;
            text-decoration: none;
        }

            footer a:hover {
                color: #0056b3;
            }

        .d-flex.align-items-center.justify-content-between {
            padding: 10px 0;
        }

        /* Làm nổi bật nhẹ nhàng phần chữ */
        .nav .sb-sidenav-menu-heading h5 {
            font-weight: bold;
            font-size: 1.5rem;
            color: #007bff; /* Màu xanh dịu tạo điểm nhấn nhẹ */
        }


        .nav .nav-link {
            color: #495057; /* Màu tối nhẹ để dễ đọc */
        }

            .nav .nav-link.highlighted-link {
                color: #007bff; /* Màu xanh tạo sự đồng nhất và nhấn mạnh */
            }

            .nav .nav-link:hover {
                background-color: #e0f4f8; /* Màu nền nhẹ khi hover */
                color: #0056b3; /* Màu chữ đậm hơn khi hover */
                transition: background-color 0.3s ease;
            }
    </style>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark sb-topnav">
        <h3 id="brandLink"><a href="/Home/Index" class="menu1">ANBISHOP.VN</a></h3>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>

        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Activity Log</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/User/DangXuat">Đăng xuất</a>
                </div>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu-heading text-primar">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading text-white"><h5>Quản Lý</h5></div>
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Sản phẩm</a>
                        <a class="nav-link" href="@Url.Action("Index", "Hangsanxuats")">Hãng sản xuất</a>
                        <a class="nav-link" href="@Url.Action("Index", "Kieudangs")">Kiểu dáng</a>
                        <a class="nav-link" href="@Url.Action("Index", "Nguoidungs")">Người dùng</a>
                        <a class="nav-link" href="@Url.Action("Index", "Phanquyens")">Phân quyền</a>
                        <a class="nav-link" href="@Url.Action("Index", "Donhangs")">Đơn hàng</a>
                        <a class="nav-link" href="@Url.Action("Index", "ThongKeDoanhThu")">Thống kê doanh thu</a>
                    </div>
                </div>
                @*<div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    AnbiShop
                </div>*@
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; AnbiShop 2024</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var brandLink = document.getElementById("brandLink");
            brandLink.addEventListener("click", function () {
                window.location.href = "/Home/Index";
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/dist/js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/dist/assets/demo/datatables-demo.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
