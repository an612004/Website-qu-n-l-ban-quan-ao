    <style>
        /* Style cho phần chính sách */
        .pd-top-30 {
            padding-top: 30px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .policies-body {
            display: flex;
            justify-content: space-between;
            text-align: center;
        }

        .policies-item {
            width: 23%;
        }

        .policies-image img {
            margin-bottom: 10px;
        }

        .policies-title {
            font-weight: bold;
        }

        .policies-desc {
            font-size: 14px;
        }

        /* Style cho phần sản phẩm */
        .collection_slidershow {
            display: flex;
            justify-content: space-between;
        }

        .ss_item {
            width: 23%;
            text-align: center;
        }

        .ss_img img {
            width: 100%;
            border-radius: 10px;
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
        }

        /* Style cho phần slideshow */
        .slideshow-container {
            max-width: 1200px;
            position: relative;
            margin: 0 auto;
            overflow: hidden; /* Ẩn ảnh vượt ra ngoài khung */
        }

        .slideshow-wrapper {
            display: flex;
            width: 300%; /* Nếu có 3 ảnh, width cần bằng 3 lần width của slideshow-container */
            transition: transform 1s ease; /* Hiệu ứng chuyển động mượt mà */
        }

        .slide {
            flex: 1 0 100%; /* Mỗi ảnh chiếm toàn bộ khung */
            box-sizing: border-box;
        }

            .slide img {
                width: 35%;
                height: 400px; /* Thay đổi kích thước theo ý muốn */
                object-fit: cover; /* Đảm bảo ảnh không bị méo */
                border-radius: 10px;
            }
    </style>
</head>
<body>

    <!-- Phần slideshow -->
    <div class="slideshow-container">
        <div class="slideshow-wrapper">
            <div class="slide">
                <img src="https://file.hstatic.net/1000360022/file/banner_web-_ra_mat__desk__81501a2b5021478b8d47a9b3fe8d69cc.jpg" alt="Male Model Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/dung-luong-banner-thoi-trang.jpg" alt="Marvel 1">
            </div>
            <div class="slide">
                <img src="~/Hinhanh//ảnh chuyển 12.png" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 13.jpeg" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 14.jpg" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 15.png" alt="Shirts Dress Fashion">
            </div>
        </div>
    </div>

    <script>
        let currentIndex = 0;
        const slides = document.querySelectorAll('.slide');
        const slideshowWrapper = document.querySelector('.slideshow-wrapper');
        const interval = 3000; // Thay đổi ảnh mỗi 3 giây

        function showNextSlide() {
            currentIndex = (currentIndex + 1) % slides.length;
            slideshowWrapper.style.transform = `translateX(-${100 * currentIndex}%)`;
        }

        setInterval(showNextSlide, interval);
    </script>

</body>
</html>


