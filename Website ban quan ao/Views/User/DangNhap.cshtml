@model Website_ban_quan_ao.Models.LoginModel

@{
    ViewBag.Title = "Đăng nhập";
}

<div style="background-color: #007bff; padding: 20px; border-radius: 5px; width: 100%; max-width: 600px; margin: 50px auto;">
    <h2 style="color: white; text-align: center;">Đăng nhập</h2>
</div>

@if (ViewBag.Chophep != false)
{
    using (Html.BeginForm("Dangnhap", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 5px; background-color: #f9f9f9;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label", style = "color: #495057; font-size: 16px;" })
                <div>
                    @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control", style = "font-size: 16px;" } })
                    @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger", style = "font-size: 14px;" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label", style = "color: #495057; font-size: 16px;" })
                <div>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control", style = "font-size: 16px;" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger", style = "font-size: 14px;" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" style="width: 100%; font-size: 16px;" />
            </div>

            <div class="form-group text-center">
                @*<a href="@Url.Action("User", "QuenMK")" style="color: #007bff;">Quên mật khẩu?</a> |*@
                @Html.ActionLink("Đăng ký", "Dangky", "User", null, new { style = "color: #007bff;" })
            </div>

        </div>
    }
}
else
{
    <div class="alert alert-danger text-center">@ViewBag.Fail</div>
    <div class="form-group text-center">
        @Html.ActionLink("Đăng Nhập lại", "DangNhap", "User", null, new { style = "color: red;" })
    </div>
}
